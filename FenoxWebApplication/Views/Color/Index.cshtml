@{

    ViewData["Title"] = "Listagem de Cores";
}

@model List<FenoxWebApplication.Models.Color>;


<h1 class="display-5 text-center">Cores</h1>
<br />
<div class="d-grid gap-2 d-md-flex justify-content-md-start">
    <a class="btn btn-primary" role="button" asp-controller="Color" asp-action="Add">Adicionar Cor</a>
</div>
<br />
<div class="text-center">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Descrição</th>
                <th scope="col">Status</th>
                <th scope="col"></th>

            </tr>
        </thead>
        <tbody>

            @foreach (var color in Model)
            {
            <tr>
                <td>@color.Id</td>
                <td>@color.Description</td>
                @if (color.Status == true)
                {
                    <td>Ativo</td>
                }
                else
                {
                    <td>Inativo</td>
                }

                    <td>
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <a role="button" class="btn btn-primary" asp-route-id="@color.Id" asp-controller="Color" asp-action="Edit" >Editar</a>
                            <a role="button" class="btn btn-danger" asp-route-id="@color.Id" asp-controller="Color" asp-action="Delete" >Deletar</a>
                        </div>
                    </td>

                </tr>
            }

           
        </tbody>
    </table>
</div>

