
@{

    ViewData["Title"] = "Listagem de Combustíveis";
}

@model List<FenoxWebApplication.Models.Fuel>;

<h1 class="display-5 text-center">Combustíveis</h1>
<br />
<div class="d-grid gap-2 d-md-flex justify-content-md-start">
    <a class="btn btn-primary" role="button" asp-controller="Fuel" asp-action="Add">Adicionar Combustível</a>
</div>
<br />
<div class="text-center">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Descrição</th>
                <th scope="col">Status</th>
                <th scope="col"></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var fuel in Model)
            {
                <tr>
                    <td>@fuel.Id</td>
                    <td>@fuel.Description</td>
                    @if (fuel.Status == true)
                    {
                        <td>Ativo</td>
                    }
                    else
                    {
                        <td>Inativo</td>
                    }

                    <td>
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <a role="button" class="btn btn-primary"  asp-route-id="@fuel.Id"  asp-controller="Fuel" asp-action="Edit">Editar</a>
                            <a role="button" class="btn btn-danger"  asp-route-id="@fuel.Id" asp-controller="Fuel" asp-action="Delete">Deletar</a>
                        </div>
                    </td>

                </tr>
            }

        </tbody>
    </table>
</div>